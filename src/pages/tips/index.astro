---
import CollectionLayout from "@components/tips/CollectionLayout.astro";
import { getIndex, getGroups } from "@lib/contentParser";
import type { DocsEntry } from "@/types";
import { sortByTitle } from "@lib/sortFunctions";

const collectionIndex = (await getIndex("tips")) as DocsEntry;
const groupIndices = (await getGroups("tips", sortByTitle)) as DocsEntry[];
---

<CollectionLayout entries={groupIndices} collectionIndex={collectionIndex} />
